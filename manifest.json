{
    "name": "GCG Extension",
    "description": "This plugin captures screenshots and retrieves HTML code.",
    "version": "1.0.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Click to captures screenshots and retrieves HTML code.",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "./icon.png",
        "32": "./icon.png",
        "48": "./icon.png",
        "128": "./icon.png"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "scripting",
        "downloads"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}
